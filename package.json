{
  "name": "bite-note",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Bite Note - 釣果記録PWAアプリ（食いついた瞬間を記録する）",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "build:prod": "NODE_ENV=production npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:fast": "vitest --run",
    "test:perf": "vitest --run **/*.performance.test.tsx",
    "test:a11y": "vitest --run **/*.accessibility.test.tsx",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run lint && npm run test -- --run && npm run test:e2e",
    "lighthouse": "lhci autorun --config=lighthouserc.mjs",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "health-check": "curl -f http://localhost:4173/health || exit 1",
    "clean": "rm -rf dist node_modules/.vite",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "performance:test": "tsx scripts/performance-monitor.ts run",
    "performance:watch": "tsx scripts/performance-monitor.ts watch",
    "memory:profile": "tsx scripts/memory-profiler.ts start",
    "memory:tide": "tsx scripts/memory-profiler.ts tide"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.heat": "^0.2.5",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.6",
    "exifreader": "^4.31.2",
    "immer": "^10.0.3",
    "leaflet": "^1.9.4",
    "leaflet.heat": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-leaflet": "^4.2.1",
    "react-leaflet-cluster": "^3.1.1",
    "react-router-dom": "^6.21.1",
    "recharts": "^3.2.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.76",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^24.5.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.55.0",
    "prettier": "^3.1.0",
    "terser": "^5.44.0",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^4.5.3",
    "vitest": "^1.0.4"
  }
}
